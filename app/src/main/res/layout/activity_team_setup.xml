<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.projectlemon.intenseorange.ui.screen.client.TeamSetup" >

    <EditText android:id="@+id/enter_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/colorScheme"
        android:layout_alignStart="@+id/colorScheme"
        android:layout_alignRight="@+id/colorScheme"
        android:layout_alignEnd="@+id/colorScheme"
        android:layout_marginTop="16dp"
        android:hint="@string/team_name_hint"
        android:inputType="text" />


    <GridLayout android:id="@+id/colorScheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp" >


        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@color/colorPicker1"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@color/colorPicker2"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@color/colorPicker3"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@color/colorPicker4"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@color/colorPicker5"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/colorPicker6"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@color/colorPicker7"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@color/colorPicker8"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@color/colorPicker9"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@color/colorPicker10"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@color/colorPicker11"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="2"
            android:layout_column="3"
            android:background="@color/colorPicker12"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@color/colorPicker13"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@color/colorPicker14"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@color/colorPicker15"
            android:onClick="chooseColor"
            android:clickable="true" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@color/colorPicker16"
            android:onClick="chooseColor"
            android:clickable="true" />

    </GridLayout>

</RelativeLayout>
