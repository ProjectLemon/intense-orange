<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.projectlemon.intenseorange.ui.screen.client.TeamSetup"
    android:contextClickable="true">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="4"
        android:columnCount="4">


        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#C61923" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#E42466" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="0"
            android:layout_column="2"
            android:background="#8800A0" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="0"
            android:layout_column="3"
            android:background="#4953B2" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#1187DE" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#0F7767" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#7ABA39" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="1"
            android:layout_column="3"
            android:background="#FEE92E" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="2"
            android:layout_column="0"
            android:background="#E85506" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="2"
            android:layout_column="1"
            android:background="#D8D8D8" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="2"
            android:layout_column="2"
            android:background="#657D8A" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="2"
            android:layout_column="3"
            android:background="#644237" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="3"
            android:layout_column="0"
            android:background="#1C252A" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="3"
            android:layout_column="1"
            android:background="#C2FF7D" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="3"
            android:layout_column="2"
            android:background="#76FFFE" />

        <Button
            android:layout_width="@dimen/color_spectrum_cell_size"
            android:layout_height="@dimen/color_spectrum_cell_size"
            android:layout_row="3"
            android:layout_column="3"
            android:background="#A387D2" />

    </GridLayout>

</RelativeLayout>
